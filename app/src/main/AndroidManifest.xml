<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hawassa.unifix">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" /> <!-- Only needed for Android 10 and below -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- ADD THIS -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- For Android 13+ -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".UnifixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Remove these meta-data lines or update strings.xml -->
        <!--
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <meta-data
            android:name="firebase_database_url"
            android:value="@string/firebase_database_url" />

        <meta-data
            android:name="firebase_storage_bucket"
            android:value="@string/firebase_storage_bucket" />
        -->

        <!-- SPLASH ACTIVITY - NEW LAUNCHER -->
        <activity
            android:name=".onboarding.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.FullScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- All other activities remain -->
        <activity android:name=".auth.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".auth.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".auth.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Student Activities -->
        <activity android:name=".student.StudentDashboardActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".student.SubmitReportActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".student.ReportHistoryActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".student.FeedbackActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Admin Activities -->
        <activity android:name=".admin.AdminDashboardActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".admin.TaskAssignmentActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".admin.CreateTechnicianActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".admin.AnalyticsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".admin.UserManagementActivity"/>
        <activity android:name=".admin.AllReportsActivity"
            android:screenOrientation="portrait" />


        <!-- Technician Activities -->
        <activity android:name=".technician.TechnicianDashboardActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".technician.AssignedTasksActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".technician.UpdateStatusActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Shared Activities -->
        <activity android:name=".shared.NotificationsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".shared.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".shared.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".shared.AboutAppActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".shared.PrivacyPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.HelpSupportActivity"
            android:label="Help &amp; Support"
            android:parentActivityName=".student.StudentDashboardActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".student.StudentDashboardActivity" />
        </activity>

        <!-- Services -->
        <service
            android:name=".shared.utils.MyFirebaseMessagingService"
            android:exported="false"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>