<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Report Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardReportDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/primary_blue"/>

                <TextView
                    android:id="@+id/tvReportTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electrical Issue - Block A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: Block A, Room 201"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Light not working in room 201"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReporter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reported by: John Doe"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReportDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submitted: 15 Dec 2023, 10:30"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvCurrentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Status: Assigned"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_assigned"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status Update Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/primary_blue"/>

                <!-- Status Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select New Status"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbAcknowledged"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acknowledged"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rbInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In Progress"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rbOnHold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On Hold"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <RadioButton
                        android:id="@+id/rbCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>
                </RadioGroup>

                <!-- Estimated Completion Date (Optional) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated Completion Date"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etEstimatedCompletion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Required Tools/Materials (Optional) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Required Tools/Materials"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etRequiredTools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., screwdriver, wiring, light bulb"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Additional Notes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes (Optional)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Enter any additional notes or comments..."
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnUpdateStatus"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Update Status"
                        android:layout_marginEnd="8dp"
                        style="@style/PrimaryButton"/>
                    <!-- Add this NAVIGATION button -->
                    <Button
                        android:id="@+id/btnNavigate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ“ Navigate"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@color/white"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:backgroundTint="@color/light_gray"
                        android:textColor="@color/text_primary"
                        style="@style/PrimaryButton"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status History (Optional) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status History"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/primary_blue"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStatusHistory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>